{
  "manifest_version": 2,

  "name": "Dev Buddy",
  "description": "Bookmark management tool",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "logo192.png"
  },

  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": ["tabs"],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js":["content.js"]
  }], 

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "index.html",
    "/static/*"
  ]
}
